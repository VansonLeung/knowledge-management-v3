# ============================================
# Knowledge Management v3 - Environment Config
# ============================================
# Copy this file to .env and fill in your values.
# Service-level .env files can override these settings.

# -------------------------
# OpenAI API Configuration
# -------------------------
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# LLM Service (port 16004)
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Embedding Service (port 16003)
EMBEDDING_MODEL=text-embedding-3-small

# Markdown Analysis Service (port 16009)
ANALYSIS_MODEL=gpt-4o-mini
ANALYSIS_MAX_ITERATIONS=20

# -------------------------
# MinerU Service (port 16007)
# -------------------------
MINERU_OUTPUT_DIR=  # Leave empty for temp folder (auto-cleanup)
MINERU_BACKEND=mlx  # Options: mlx, torch

# -------------------------
# Docling Service (port 16008)
# -------------------------
# Audio transcription (for WAV, MP3)
WHISPER_MODEL=openai/whisper-large-v3

# -------------------------
# Elasticsearch Configuration
# -------------------------
ES_HOST=localhost
ES_PORT=9200
ES_SCHEME=http
ES_USER=
ES_PASSWORD=

# -------------------------
# Neo4j Configuration
# -------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=

